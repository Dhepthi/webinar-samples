<div id="pageTitle">
	<h1>New <%= @person.title %></h1>
</div>

<div id="toolbar">
     <div id="leftItem" class="backButton"><%= link_to "Cancel", :action => :index %></div>
</div>

<div id="content">
    <form method="POST" action="<%= url_for :action => :create %>">
            <input type="hidden" name="id" value="<%= @person.object %>"/>
            <ul>
                
                <li>
                    <label for="person[name]" class="fieldLabel">Name</label>
                    <input type="text" name="person[name]" <%= placeholder( "Name" ) %> />
                </li>
                
                <li>
                    <label for="person[age]" class="fieldLabel">Age</label>
                    <input type="text" name="person[age]" <%= placeholder( "Age" ) %> />
                </li>
                
                <li>
                    <label for="person[location]" class="fieldLabel">Location</label>
                    <input type="text" name="person[location]" <%= placeholder( "Location" ) %> />
                </li>
                
            </ul>
            <input type="submit" class="standardButton" value="Create" />
    </form>
</div>