<div id="pageTitle">
    <h1>New Person</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @person.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Name: </td>
    			  <td class="itemValue"><input type="text" name="person[name]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Age: </td>
    			  <td class="itemValue"><input type="password" name="person[age]"/></td>
    		  </tr>
    		  <tr>
    			  <td class="itemLabel">Checkbox: </td>
    			  <td class="itemValue"><input type="checkbox" name="person[age]"/></td>
    		  </tr>
    		  <tr>
    			  <td class="itemLabel">Radio1: </td>
    			  <td class="itemValue"><input type="radio" name="person[age]"/></td>
    		  </tr>
    		  <tr>
    			  <td class="itemLabel">Radio2: </td>
    			  <td class="itemValue"><input type="radio" name="person[age]"/></td>
    		  </tr>
    		  <tr>
    			  <td class="itemLabel">Select: </td>
    			  <td class="itemValue">
					<select name="person[age]">
						<option>selectopt1</option>
						<option>selectopt2</option>
					</select>
				  </td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>