<div id="pageTitle">
		<h1>Edit <%= @route.name%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @route.object %>
    <%= link_to "Delete", :action => :delete, :id => @route.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @route.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="route[name]" value="<%= @route.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Abbr: </td>
              			<td class="itemValue"><input type="text" name="route[abbr]" value="<%= @route.abbr %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Route: </td>
              			<td class="itemValue"><input type="text" name="route[route_id]" value="<%= @route.route_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Color: </td>
              			<td class="itemValue"><input type="text" name="route[color]" value="<%= @route.color %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Origin: </td>
              			<td class="itemValue"><input type="text" name="route[origin]" value="<%= @route.origin %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Destination: </td>
              			<td class="itemValue"><input type="text" name="route[destination]" value="<%= @route.destination %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Num stations: </td>
              			<td class="itemValue"><input type="text" name="route[num_stations]" value="<%= @route.num_stations %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Stations: </td>
              			<td class="itemValue"><input type="text" name="route[stations]" value="<%= @route.stations %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
