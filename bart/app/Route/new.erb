<div id="pageTitle">
	<h1>New <%= @route.title %></h1>
</div>

<div id="toolbar">
     <div id="leftItem" class="backButton"><%= link_to "Cancel", :action => :index %></div>
</div>

<div id="content">
    <form method="POST" action="<%= url_for :action => :create %>">
            <input type="hidden" name="id" value="<%= @route.object %>"/>
            <ul>
                
                <li>
                    <label for="route[name]" class="fieldLabel">Name</label>
                    <input type="text" name="route[name]" <%= placeholder( "Name" ) %> />
                </li>
                
                <li>
                    <label for="route[abbr]" class="fieldLabel">Abbr</label>
                    <input type="text" name="route[abbr]" <%= placeholder( "Abbr" ) %> />
                </li>
                
                <li>
                    <label for="route[route_id]" class="fieldLabel">Route</label>
                    <input type="text" name="route[route_id]" <%= placeholder( "Route" ) %> />
                </li>
                
                <li>
                    <label for="route[color]" class="fieldLabel">Color</label>
                    <input type="text" name="route[color]" <%= placeholder( "Color" ) %> />
                </li>
                
                <li>
                    <label for="route[origin]" class="fieldLabel">Origin</label>
                    <input type="text" name="route[origin]" <%= placeholder( "Origin" ) %> />
                </li>
                
                <li>
                    <label for="route[destination]" class="fieldLabel">Destination</label>
                    <input type="text" name="route[destination]" <%= placeholder( "Destination" ) %> />
                </li>
                
                <li>
                    <label for="route[num_stations]" class="fieldLabel">Num stations</label>
                    <input type="text" name="route[num_stations]" <%= placeholder( "Num stations" ) %> />
                </li>
                
                <li>
                    <label for="route[stations]" class="fieldLabel">Stations</label>
                    <input type="text" name="route[stations]" <%= placeholder( "Stations" ) %> />
                </li>
                
            </ul>
            <input type="submit" class="standardButton" value="Create" />
    </form>
</div>